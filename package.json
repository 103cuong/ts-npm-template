{
  "name": "ts-npm-template",
  "version": "0.0.1",
  "description": "A TypeScript template ðŸŒ¼ for npm package",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "repository": "https://github.com/103cuong/ts-npm-template",
  "author": "Nguyen Duy Cuong <103cuong@gmail.com>",
  "keywords": [
    "npm",
    "typescript",
    "template"
  ],
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "start": "node ./lib/index.js",
    "start:dev": "nodemon --ignore lib/ --exec ts-node ./src/index.ts",
    "test": "jest --config jestconfig.json",
    "build": "rm -rf lib && tsc",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm test"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "jest": "^24.7.1",
    "lint-staged": "^10.1.3",
    "nodemon": "^2.0.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.4.4"
  },
  "dependencies": {}
}
